extends layout

block body
  div
    #banner-background
      #banner
        ul.logo
          li
            img(src='images/logo.png')
          li Angular博客
        ul.menu(ng-if='global.isLogin')
          li
            a(href='/home') 主页
          li
            a(href='/addPost') 发表一条新的博客
        ul.user.right(ng-if='!global.isLogin')
          li
            a(href='/signup') 注册
          li
            a(href='/signin') 登录
        ul.user.right(ng-if='global.isLogin')
          li(ng-click='showMyBlog(user.username)') {{user.username}}
          li
            a(ng-click='logout()') 注销
    div(ng-view)#main
  script(src="https://cdn.bootcss.com/angular.js/1.6.9/angular.js")
  script(src="https://cdn.bootcss.com/angular.js/1.6.9/angular-route.js")
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
